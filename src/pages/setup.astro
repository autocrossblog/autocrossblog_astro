---
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Layout from '~/layouts/PageLayout.astro';
//import Steps2 from '~/components/widgets/Steps2.astro';
import Features3 from '~/components/widgets/Features3.astro';

import pageImage from '~/assets/images/2024/December/frs-1.jpg';

const metadata = {
  title: 'Autocross Car Setup',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
  tagline="2016 Scion FRS Solo Spec Coupe"
  image={{
    src: pageImage,
    alt: '2016 Scion FRS setup for SSC Autocross',
  }}
>
  <Fragment slot="title">
    Optimized for the thrill of
    <span class="text-accent dark:text-white highlight">SSC Autocross</span>
  </Fragment>

  <Fragment slot="subtitle">
    Dive into the details of a perfectly tuned
    <span class="text-accent dark:text-white highlight">2016 Scion FRS</span>
    built to dominate Solo Spec Coupe. We're also keeping track of cones and tire runs here.
  </Fragment>
</Hero>

<!-- Stats Widget ****************** -->

<Stats
  title="Car Setup Details"
  stats={[
    { title: 'Car Model', amount: '2016 Scion FRS' },
    { title: 'Class', amount: 'SSC (Solo Spec Coupe)' },
    { title: 'Event-ready Weight', amount: '2,800 lbs' },
    { title: 'Years Racing', amount: '8+' },
  ]}
/>


  <!-- Features3 Widget ************** -->

  <Features3
    title="2016 FRS SSC Autocross Settings"
    subtitle="Optimized for Performance"
    columns={3}
    isBeforeContent={true}
    classes={{
      headline: "HeadClass",
      container: 'grid justify-center', /* Centers items */
      items: {
        container: 'justify-center text-center', /* Centers grid content */
        title: 'text-center', /* Centers item titles */
        icon: 'mx-auto', /* Centers icons */
      },
    }}
    items={[
      {
        title: 'Front Swaybar',
        description: 'Soft setting',
        icon: 'tabler:adjustments-horizontal',
      },
      {
        title: 'Rear Swaybar',
        description: 'Stiff setting',
        icon: 'tabler:adjustments-horizontal',
      },
      {
        title: 'Front Konis',
        description: '0.5 turn from soft',
        icon: 'tabler:settings',
      },
      {
        title: 'Rear Konis',
        description: '1.5 turns from soft, 1 turn from soft if too loose on exit',
        icon: 'tabler:settings',
      },
      {
        title: 'Front Tire Pressure',
        description: '31 psi',
        icon: 'tabler:gauge',
      },
      {
        title: 'Rear Tire Pressure',
        description: '30 psi',
        icon: 'tabler:gauge',
      },
    ]}
  />

  <h2 class="text-2xl font-bold text-center mt-10 mb-4 text-gray-800">
    Autocross Alignment Specs
  </h2>
    

  <table class="w-full max-w-3xl mx-auto border border-gray-300 rounded-lg shadow-lg overflow-hidden">
    <thead>
        <tr class="bg-gray-200 text-gray-700">
            <th class="px-4 py-2">Measurement</th>
            <th class="px-4 py-2">Left Front</th>
            <th class="px-4 py-2">Right Front</th>
            <th class="px-4 py-2">Left Rear</th>
            <th class="px-4 py-2">Right Rear</th>
        </tr>
    </thead>
    <tbody class="divide-y divide-gray-300">
        <tr>
            <td class="px-4 py-2 font-semibold">Camber</td>
            <td class="px-4 py-2">-3.1°</td>
            <td class="px-4 py-2">-3.3°</td>
            <td class="px-4 py-2">-2.3°</td>
            <td class="px-4 py-2">-2.2°</td>
        </tr>
        <tr class="bg-gray-100">
            <td class="px-4 py-2 font-semibold">Caster</td>
            <td class="px-4 py-2">5.3°</td>
            <td class="px-4 py-2">5.3°</td>
            <td class="px-4 py-2">N/A</td>
            <td class="px-4 py-2">N/A</td>
        </tr>
        <tr>
            <td class="px-4 py-2 font-semibold">Toe</td>
            <td class="px-4 py-2">0in</td>
            <td class="px-4 py-2">0in</td>
            <td class="px-4 py-2">1/16in</td>
            <td class="px-4 py-2">1/16in</td>
        </tr>
    </tbody>
</table>

<h3 class="text-xl font-bold mt-6 mb-2 text-center">Overall Measurements</h3>

<table class="w-full max-w-lg mx-auto border border-gray-300 rounded-lg shadow-lg overflow-hidden">
    <thead>
        <tr class="bg-gray-200 text-gray-700">
            <th class="px-4 py-2">Measurement</th>
            <th class="px-4 py-2">Value</th>
        </tr>
    </thead>
    <tbody class="divide-y divide-gray-300">
        <tr>
            <td class="px-4 py-2 font-semibold">Total Toe (Front)</td>
            <td class="px-4 py-2">0in</td>
        </tr>
        <tr>
            <td class="px-4 py-2 font-semibold">Total Toe (Rear)</td>
            <td class="px-4 py-2">1/8in</td>
        </tr>
    </tbody>
</table>

<h3 class="text-xl font-bold mt-6 mb-2 text-center">Tire Tracker (RT660+ purchased March 2025, August 2025)</h3>

<table class="w-full max-w-lg mx-auto border border-gray-300 rounded-lg shadow-lg overflow-hidden">
    <thead>
        <tr class="bg-gray-200 text-gray-700">
            <th class="px-4 py-2">Date</th>
            <th class="px-4 py-2">Number of Runs</th>
        </tr>
    </thead>
    <tbody class="divide-y divide-gray-300">
        <tr>
          <td class="px-4 py-2">3/21/2025</td>
          <td class="px-4 py-2 font-semibold">2.5</td>
        </tr>
        <tr>
          <td class="px-4 py-2">3/22/2025</td>
          <td class="px-4 py-2 font-semibold">3</td>
        </tr>
        <tr>
          <td class="px-4 py-2">3/23/2025</td>
          <td class="px-4 py-2 font-semibold">3</td>
        </tr>
        <tr>
          <td class="px-4 py-2">4/13/2025</td>
          <td class="px-4 py-2 font-semibold">4</td>
        </tr>
        <tr>
          <td class="px-4 py-2 font-bold">Total as of 4/13/2025</td>
          <td class="px-4 py-2 font-bold">12.5</td>
        </tr>
    </tbody>
</table>
<br />

<table class="w-full max-w-lg mx-auto border border-gray-300 rounded-lg shadow-lg overflow-hidden">
    <thead>
        <tr class="bg-gray-200 text-gray-700">
            <th class="px-4 py-2">Date</th>
            <th class="px-4 py-2">Number of Runs</th>
        </tr>
    </thead>
    <tbody class="divide-y divide-gray-300">
        <tr>
          <td class="px-4 py-2">8/30/2025</td>
          <td class="px-4 py-2 font-semibold">4</td>
        </tr>
        
        <tr>
          <td class="px-4 py-2 font-bold">Total as of 8/30/2025</td>
          <td class="px-4 py-2 font-bold">4</td>
        </tr>
    </tbody>
</table>


<h3 class="text-xl font-bold mt-6 mb-2 text-center">2025 Cone Count</h3>

<table class="w-full max-w-lg mx-auto border border-gray-300 rounded-lg shadow-lg overflow-hidden">
    <thead>
        <tr class="bg-gray-200 text-gray-700">
            <th class="px-4 py-2">Date</th>
            <th class="px-4 py-2">Number of Cones</th>
        </tr>
    </thead>
    <tbody class="divide-y divide-gray-300">
        <tr>
          <td class="px-4 py-2">4/13/2025</td>
          <td class="px-4 py-2 font-semibold">1</td>
        </tr>
        <tr>
          <td class="px-4 py-2 font-bold">Total as of 4/13/2025</td>
          <td class="px-4 py-2 font-bold">1</td>
        </tr>
    </tbody>
</table>

</Layout>
